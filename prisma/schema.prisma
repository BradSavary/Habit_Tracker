generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

// Modèle User pour l'authentification
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Système de progression
  level         Int       @default(1)
  xp            Int       @default(0)
  unlockedEmojis Json    @default("[]")
  
  habits        Habit[]
  moodEntries   MoodEntry[]
  accounts      Account[]
  sessions      Session[]

  @@map("users")
}

// Modèles NextAuth.js
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Modèle Habit pour les habitudes
model Habit {
  id          String   @id @default(cuid())
  name        String
  description String?
  emoji       String?  // Emoji représentant l'habitude
  category    String?  // Catégorie: Santé, Productivité, Sport, Créativité, Social, Apprentissage, Autre
  color       String?  // Couleur accent (purple, blue, green, orange, pink, teal)
  frequency   String   @default("daily") // daily, weekly, monthly
  weekDays    Json?    // Pour weekly: [0,1,2,3,4,5,6] (dimanche à samedi) - jours spécifiques
  weeklyGoal  Int?     // Pour weekly: nombre de fois par semaine (si weekDays non spécifié)
  monthlyGoal Int?     // Pour monthly: nombre de fois dans le mois
  monthDays   Json?    // Pour monthly: [4, 12, 25] - jours spécifiques du mois (1-31)
  endDate     DateTime? // Date de fin / échéance de l'habitude
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completions HabitCompletion[]

  @@map("habits")
}

// Modèle HabitCompletion pour suivre les validations
model HabitCompletion {
  id          String   @id @default(cuid())
  habitId     String
  habit       Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  completedAt DateTime @default(now())
  notes       String?
  createdAt   DateTime @default(now()) // Pour tracker la première création

  @@unique([habitId, completedAt])
  @@map("habit_completions")
}

// Modèle pour tracker les XP accordés (ne se supprime jamais)
model HabitXpGrant {
  id          String   @id @default(cuid())
  habitId     String
  userId      String
  xpGranted   Int
  grantedDate DateTime // Date normalisée (00:00:00)
  createdAt   DateTime @default(now())

  @@unique([habitId, userId, grantedDate])
  @@map("habit_xp_grants")
}

// Modèle MoodEntry pour le suivi de l'humeur quotidienne
model MoodEntry {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  emoji     String   // Emoji représentant l'humeur
  date      DateTime @default(now()) // Date du mood (normalisée au jour)
  notes     String?  // Notes optionnelles sur l'humeur
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
  @@map("mood_entries")
}
